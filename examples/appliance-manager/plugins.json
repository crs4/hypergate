{
    "routines": {
        "vitalograph": {
            "path": "C://device-manager//plugin//vitalograph",
            "command": "vitalograph.exe",
            "args": ["-f temp.json", "-z tcp://127.0.0.1:9998"],
            "jsonFile": "temp.json",
            "zeromqHost": "tcp://127.0.0.1:9998",
            "jsonFileSchema": {
                "type": "object",
                "properties": {
                    "questionario": {
                        "type": "string",
                        "description": "Checkup/measurement name"
                    },
                    "anagrafica": {
                        "type": "object",
                        "description": "Client data"
                    },
                    "risposte": {
                        "type": "array",
                        "description": "Questions and answer array"
                    },
                    "warning": {
                        "type": "array",
                        "description": "Warning and error messages related to routine execution"
                    }
                }
            }
        },
        "impedenziometro": {
            "path": "C://device-manager//plugin//impedenziometro",            
            "args": ["-f temp.json", "-z tcp://127.0.0.1:9998"],
            "jsonFile": "temp.json",
            "zeromqHost": "tcp://127.0.0.1:9998",
            "jsonFileSchema": {
                "type": "object",
                "properties": {
                    "questionario": {
                        "type": "string",
                        "description": "Checkup/measurement name"
                    },
                    "anagrafica": {
                        "type": "object",
                        "description": "Client data"
                    },
                    "risposte": {
                        "type": "array",
                        "description": "Questions and answer array"
                    },
                    "warning": {
                        "type": "array",
                        "description": "Warning and error messages related to routine execution"
                    }
                }
            }
        }
    },
    "services": {
        "salmone": {
            "path": "C://device-manager//plugin//salmone",
            "command": "salmone.exe",
            "args": [],
            "autoStarts": 3
        },
        "usbMonitor": {
            "path": "C://device-manager//plugin//usb-monitor",
            "command": "usb-monitor.exe",
            "args": ["-z", "tcp://127.0.0.1:9998"],
            "autoStarts": 1,
            "zeromqHost": "tcp://127.0.0.1:9998",
            "outputSchema": {
                "type": "object",
                "properties": {
                    "event": {
                        "type": "string",
                        "description": "Device event type"
                    },
                    "deviceList": {
                        "type": "array",
                        "description": "Connected devices array"
                    },
                    "id": {
                        "type": "string",
                        "description": "Id of the related device"
                    },
                    "name": {
                        "type": "string",
                        "description": "Name of the related device"
                    }
                }
            }
        }
    },
    "tasks": {
        "update": {
            "path": "C://device-manager//rsync",
            "command": "update.bat"
        },
        "restart": {
            "path": "./",
            "command": "systemTasks.bat",
            "args": ["restart"]
        },
        "setAccessPoint": {
            "path": "./",
            "command": "systemTasks.bat",
            "args": ["setAccessPoint"]
        }
    }
}